int num1=dice.Next(1,7);
int num2=dice.Next(1,7);
int num3=dice.Next(1,7);
int totalnum=num1+num2+num3;

Console.WriteLine("La sumatoria total: "+num1+" + "+num2+" + "+num3+"= "+totalnum);

if (totalnum > 14)
{
    Console.WriteLine("Tu Ganaste!");
}

if (totalnum < 15)
{
    Console.WriteLine("Lo siento, no es tu dia de suerte. Perdiste :(");
}


